##############################
#### FLUID STYLED CONTENT ####
##############################
styles {
    templates {
        layoutRootPath = EXT:bitconex_theme/Resources/Private/Layouts/ContentElements/
        partialRootPath = EXT:bitconex_theme/Resources/Private/Partials/ContentElements/
        templateRootPath = EXT:bitconex_theme/Resources/Private/Templates/ContentElements/
    }
}


############
### PAGE ###
############
page {
     fluidtemplate {
        layoutRootPath = EXT:bitconex_theme/Resources/Private/Layouts/Page/
        partialRootPath = EXT:bitconex_theme/Resources/Private/Partials/Page/
        templateRootPath = EXT:bitconex_theme/Resources/Private/Templates/Page/
    }
    meta {
        description =
        author =
        keywords =
        viewport = width=device-width, initial-scale=1
        robots = index,follow
        apple-mobile-web-app-capable = no
        compatible = IE=edge
    }
}


##############
### CONFIG ###
##############
config {
    no_cache = 0
    removeDefaultJS = 0
    admPanel = 0
    prefixLocalAnchors = all
    headerComment = build by M-Tel
    sendCacheHeaders = 1
}

###########
### LIB ###
###########

lib {
    body {
        class =
        id = body
    }
    logo {
        text = M-Tel
        rootPageId = 1
    }

    footerMenuPageId = 6
}